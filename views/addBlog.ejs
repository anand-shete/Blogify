<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Add Blog Page</title>
</head>

<body>
    <%- include('./partials/navbar') %>

        <div class="container mt-3">
            <form action="/blog" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="coverImage" class="form-label">Cover Image</label>
                    <input name="coverImage" 
                    type="file" 
                    class="form-control" 
                    id="coverImage" 
                    aria-describedby="coverImage">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="title" type="text" class="form-control" id="title" aria-describedby="title">
                </div>

                <div class="mb-3">
                    <label for="body">Body</label>
                    <textarea name="body" class="form-control mt-2" id="body"
                        style="height: 100px"></textarea>
                </div>

                <div class="mb-3 mt-4">
                    <button class="btn btn-primary"> Submit</button>
                </div>
            </form>
        </div>

        <%- include('./partials/script') %>
</body>

</html>